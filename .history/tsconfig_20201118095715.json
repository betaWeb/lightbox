{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"esnext",
			"scripthost"
		],
		"baseUrl": "./src",
		"paths": {
			"~*": [
				"./*"
			]
		},
		"typeRoots": [
			"src/types"
		]
	},
	"include": [
		"src/**/*"
	]
}